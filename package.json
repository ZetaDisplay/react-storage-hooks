{
  "name": "react-storage-hooks",
  "version": "1.0.0",
  "description": "React hooks for state sync with localStorage",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "eslint src/**/*.{js,jsx}",
    "format": "prettier --write *.md src/**/*.{js,jsx}"
  },
  "author": "Ram√≥n Guijarro <hola@soyguijarro.com>",
  "license": "MIT",
  "repository": "https://github.com/soyguijarro/react-storage-hooks",
  "peerDependencies": {
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^5.10.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0",
    "react-test-renderer": "^16.6.3",
    "react-testing-library": "^5.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run coverage"
    }
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
