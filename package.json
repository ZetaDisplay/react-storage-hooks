{
  "name": "react-storage-hooks",
  "version": "3.0.0",
  "description": "React hooks for state sync with localStorage",
  "keywords": [
    "react",
    "hooks",
    "storage",
    "persistence"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint --fix src/*.{ts,tsx}",
    "format": "prettier --write *.md src/*.{ts,tsx}",
    "test": "jest",
    "coverage": "jest --coverage",
    "compile": "tsc --noEmit",
    "check": "npm run lint && npm run compile && npm run format && npm run coverage",
    "prebuild": "del dist",
    "build": "tsc",
    "prepublishOnly": "npm run coverage && npm run build"
  },
  "files": [
    "dist"
  ],
  "author": "Ram√≥n Guijarro <hola@soyguijarro.com>",
  "license": "MIT",
  "repository": "https://github.com/soyguijarro/react-storage-hooks",
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-test-renderer": "^16.8.5",
    "react-testing-library": "^6.0.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.4000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run compile && npm run coverage"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "off"
      ],
      "react/display-name": [
        false
      ],
      "react/prop-types": [
        false
      ]
    }
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "preset": "ts-jest",
    "testMatch": [
      "**/src/*.test.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
