{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2016", "dom"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["src/*.test.ts", "src/*.test.tsx"]
}
